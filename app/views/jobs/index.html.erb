<table class="table table-boldered table-striped custab">
  <thead>
    <tr>
      <th>职缺</th>
      <th>薪资下限
          <%= link_to("", jobs_path(:order => "by wage_lower_bound_DESC"), class: "fa fa-arrow-down", style: "color:rgba(2,119,189 ,1); padding-left:10px;text-decoration:none;")%>
          <%= link_to("", jobs_path(:order => "by wage_lower_bound_ASC"), class: "fa fa-arrow-up", style:"color:rgba(2,119,189,1);text-decoration:none;") %>
      </th>
      <th>薪资上限
        <%= link_to("", jobs_path(:order => "by wage_upper_bound_DESC"), class: "fa fa-arrow-down", style: "color:rgba(2,119,189 ,1); padding-left:10px;text-decoration:none;")%>
        <%= link_to("", jobs_path(:order => "by wage_upper_bound_ASC"), class: "fa fa-arrow-up", style: "color:rgba(2,119,189 ,1); padding-left:10px;text-decoration:none;")%>
      </th>
      <th>联系方式</th>
      <th>发布时间
        <%= link_to("", jobs_path(:order => "by created_at_DESC"), class: "fa fa-arrow-down", style: "color:rgba(2,119,189 ,1); padding-left:10px;text-decoration:none;")%>
        <%= link_to("", jobs_path(:order => "by created_at_ASC"), class: "fa fa-arrow-up", style: "color:rgba(2,119,189 ,1); padding-left:10px;text-decoration:none;")%>
      </th>
      </tr>
  </thead>
  <tbody>
    <%= render :partial => "jobitem", :collection => @jobs, :as => :job %>
  </tbody>
</table>
